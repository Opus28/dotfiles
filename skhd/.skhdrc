# Avoid conflicts with other keybinds
:: default @ 
:: yabai @ 
default < fn - ` ; yabai
yabai < fn - ` ; default

# Manage some important stuff
yabai < cmd + shift - r : skhd --stop-service && skhd --start-service

# Open up some nice programs
yabai < cmd - b : open -na /Applications/Firefox.app
yabai < cmd - return : open -na /System/Applications/Utilities/Terminal.app

# === Navigation ===
# window focus
yabai < cmd - h : yabai -m window --focus west
yabai < cmd - j : yabai -m window --focus south
yabai < cmd - k : yabai -m window --focus north
yabai < cmd - l : yabai -m window --focus east

yabai < cmd - left : yabai -m window --focus west
yabai < cmd - down : yabai -m window --focus south
yabai < cmd - up : yabai -m window --focus north
yabai < cmd - right : yabai -m window --focus east

# space focus and creation
yabai < cmd - tab : yabai -m space --focus next || yabai -m space --focus first
yabai < cmd + shift - tab : yabai -m space --focus prev || yabai -m space --focus last
yabai < cmd - x : yabai -m space --focus recent
yabai < cmd - 1 : yabai -m space --focus 1
yabai < cmd - 2 : yabai -m space --focus 2
yabai < cmd - 3 : yabai -m space --focus 3
yabai < cmd - 4 : yabai -m space --focus 4
yabai < cmd - 5 : yabai -m space --focus 5
yabai < cmd - 6 : yabai -m space --focus 6
yabai < cmd - 7 : yabai -m space --focus 7
yabai < cmd - 8 : yabai -m space --focus 8
yabai < cmd - 9 : yabai -m space --focus 9

# === Modification ===
# Move window relatively
yabai < cmd + shift - h : yabai -m window --warp west
yabai < cmd + shift - j : yabai -m window --warp south
yabai < cmd + shift - k : yabai -m window --warp north
yabai < cmd + shift - l : yabai -m window --warp east

yabai < cmd + shift - left : yabai -m window --warp west
yabai < cmd + shift - down : yabai -m window --warp south
yabai < cmd + shift - up : yabai -m window --warp north
yabai < cmd + shift - right : yabai -m window --warp east

# send window to space
yabai < cmd + shift - x : yabai -m window --space recent
yabai < cmd + shift - 1 : yabai -m window --space 1
yabai < cmd + shift - 2 : yabai -m window --space 2
yabai < cmd + shift - 3 : yabai -m window --space 3
yabai < cmd + shift - 4 : yabai -m window --space 4
yabai < cmd + shift - 5 : yabai -m window --space 5
yabai < cmd + shift - 6 : yabai -m window --space 6
yabai < cmd + shift - 7 : yabai -m window --space 7
yabai < cmd + shift - 8 : yabai -m window --space 8
